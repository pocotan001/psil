rules:
    # Possible errors
    no-debugger: 0

    # Best practices
    no-alert: 0
    no-div-regex: 2
    no-throw-literal: 2

    # Strict mode
    strict: [2, "global"]

    # Node.js
    no-process-exit: 0

    # Stylistic issues
    indent: [1, 4]
    brace-style: [1, "1tbs", { allowSingleLine: true }]
    comma-style: [1, "last"]
    no-lonely-if: 1
    no-multiple-empty-lines: [1, { max: 1 }]
    no-nested-ternary: 1
    quotes: [1, "single"]
    space-after-keywords: [1, "always"]
    space-before-blocks: [1, "always"]
    spaced-line-comment: [1, "always"]

env:
    node: true
    mocha: true
